@model LedgerReportWithChartViewModel


@{
    Layout = null;
    var reports = Model.Reports;
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>Ledger Report</title>
    <style>
        body {
            font-family: 'Segoe UI', sans-serif;
            margin: 30px;
            color: #222;
            background-color: #fff;
        }

        h2 {
            text-align: center;
            font-size: 26px;
            font-weight: 600;
            margin-bottom: 30px;
            color: #1a1a1a;
            border-bottom: 2px solid #333;
            padding-bottom: 8px;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
            font-size: 14px;
        }

        th, td {
            border: 1px solid #ccc;
            padding: 10px 8px;
            text-align: center;
        }

        th {
            background-color: #f0f0f0;
            font-weight: 600;
            color: #333;
        }

        tr:nth-child(even) {
            background-color: #fafafa;
        }

        .no-data {
            text-align: center;
            color: #d9534f;
            font-weight: bold;
            font-size: 16px;
            margin-top: 50px;
        }

        .chart-container {
            margin-top: 50px;
            text-align: center;
        }

        .chart-title {
            font-size: 18px;
            font-weight: 600;
          
            margin-bottom: 15px;
            color: #1a1a1a;
        }

        img {
            max-width: 100%;
            border: 1px solid #ccc;
            padding: 6px;
            border-radius: 4px;
        }
    </style>
</head>
<body>
    <h2>Ledger Report</h2>

    @if (reports != null && reports.Any())
    {
        <table>
            <thead>
                <tr>
                    <th>Date</th>
                    <th>Particulars</th>
                    <th>Voucher No</th>
                    <th>Debit</th>
                    <th>Credit</th>
                    <th>Balance</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in reports)
                {
                    <tr>
                        <td>@item.TransactionDate.ToString("dd-MM-yyyy")</td>
                        <td>@item.Particulars</td>
                        <td>@item.VoucherNo</td>
                        <td>@item.DebitAmount.ToString("N2")</td>
                        <td>@item.CreditAmount.ToString("N2")</td>
                        <td>@item.Balance.ToString("N2")</td>
                    </tr>
                }
            </tbody>
        </table>

        @if (!string.IsNullOrEmpty(Model.ChartImageBase64))
        {
            <div class="chart-container">
                <div class="chart-title">Debit vs Credit Chart</div>
                <img src="@Model.ChartImageBase64" alt="Ledger Chart" />
            </div>
        }
    }
    else
    {
        <div class="no-data">No data available for the selected ledger.</div>
    }

    <div style="position: relative; margin-top: 50px;">
        <img src="wwwroot/images/stamp.png"
             alt="Company Stamp"
             style="opacity: 0.5; width: 150px; position: absolute; right: 20px; bottom: 20px;" />
    </div>

    <div style="margin-top: 80px;">
        <div style="display: flex; justify-content: flex-end; align-items: center;">
            <div style="text-align: right;">
                <p><strong>Authorized Signatory</strong></p>
                <img src="wwwroot/images/signature.png" style="width: 150px; height: auto;" alt="Signature" />
            </div>
        </div>
    </div>
</body>
</html>
